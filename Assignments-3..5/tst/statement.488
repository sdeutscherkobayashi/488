% test program for valid statements
begin
  integer a_var

  a_var := 1


  % test conditionals
  if true then
    % result outside function is ok without semantics
    result 1
  fi

  if a_var = 1 then
    return
  else
    return
  fi

  loop
    put "this is a infinite loop"
  pool

  % test loop syntax
  loop
    exit
  pool

  loop
    loop
      exit 1
    pool
  pool

  loop
    exit when false
  pool

  loop
    loop
      exit 1 when true
    pool
  pool

  some_procedure(a_var)

  begin
    put "scope is also a statement"
  end

  get a_var
  put "put is a statement"
end
